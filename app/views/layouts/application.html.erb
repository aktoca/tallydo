<!DOCTYPE html>
<html>
  <head>
    <title> <%= page_title %> </title>

    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div id="nav">

      <% if current_user %>
      <div id="logo">
        <%= link_to 'Td', user_tasks_path(current_user) %>
      </div>
      <h2 id="site">Tally-do</h2>
        <div class="Nav-top nav">
          <ul>
            <li> <%= link_to "All Lists", lists_path %></li> 
            <li> <%= link_to "My TallyDo", user_tasks_path(current_user) %></li> 
            <li> <%= link_to "More?" %></li> 
          </ul>
        </div>
        <div class="settings nav">
          <ul>
            <li> <%= link_to current_user.username, user_path(current_user.id) %></li>
            <li> <%= link_to "Logout", session_path("current"), method: :delete %></li>
          </ul>
        </div>
      <% else %>
      <div id="logo">Td</div>
        <div class="login">
          <ul>
          <li>  <%= link_to "Sign-in", :login %></li>
          <li>  <%= link_to "Register", new_user_path %></li>
        </ul>
          </div>
      <% end %>
    </div>
    <div class="message">
      <p id="notice"><%= flash[:notice] %></p>
      <p id="alert"><%= flash[:alert] %></p>
    </div>
    <div class="content">
      <%= yield %>
    </div>


  </body>
</html>
