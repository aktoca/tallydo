<!DOCTYPE html>
<html>
  <head>
    <title>Tallydo</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div id="nav">
      <div id="logo">
        Td
      </div>
      <h2 id="site">Tally-do</h2>

      <% if current_user %>
        <div class="settings">
          <ul>
            <li> <%= link_to current_user.username, edit_user_path(current_user.id) %></li>
            <li> <%= link_to "Logout", session_path("current"), method: :delete %></li>
            <li> <%= link_to "Add List", lists_path %></li> 
          </ul>
        </div>
      <% else %>
        <div class="settings">
          <%= link_to "Register", new_user_path %> |
          <%= link_to "Login", :login %>
        </div>
      <% end %>
    </div>
    <div>
      <p id="notice"><%= flash[:notice] %></p>
      <p id="alert"><%= flash[:alert] %></p>
    </div>
    <div class="content">
      <%= yield %>
    </div>


  </body>
</html>
